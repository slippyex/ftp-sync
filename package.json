{
  "name": "ftp-sync-tool",
  "version": "1.0.0",
  "authors": [
    "Markus Velten"
  ],
  "main": "dist/src/index.js",
  "license": "MIT",
  "scripts": {
    "sync": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "format-check": "prettier --config .prettierrc --check ./{src,tests}/**/*.ts",
    "format": "yarn format-check --write",
    "ts-watch": "tsc --watch",
    "lint": "eslint --ext .ts src/"
  },
  "dependencies": {
    "basic-ftp": "^5.0.3",
    "blessed": "^0.1.81",
    "chalk": "4",
    "dayjs": "^1.11.10",
    "fs-extra": "^11.1.1",
    "iconv-lite": "^0.6.3",
    "ora": "7.0.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.23",
    "@types/fs-extra": "^11.0.2",
    "@types/iconv-lite": "^0.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/ora": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testTimeout": 2000,
    "forceExit": true
  },
  "pre-commit": [
    "lint",
    "format-check",
    "test"
  ]
}
